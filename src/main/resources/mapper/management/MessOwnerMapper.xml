<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="mybatis.com.mybatis.ManagementRepository.MessOwnerRepository" >
    <resultMap id="MessOwnerResultMap" type="mybatis.com.mybatis.ManagementEntity.MessOwnerEntity" >
        <id column="id" property="id"/>
        <result column="first_name" property="firstName"/>
        <result column="last_name" property="lastName"/>
        <result column="age" property="age"/>
        <result column="gender" property="gender"/>
        <result column="contact_number" property="contactNumber"/>
        <result column="mess_id" property="messId"/>
    </resultMap>

    <select id="findAllMessOwners"
            resultMap="MessOwnerResultMap" resultType="mybatis.com.mybatis.ManagementEntity.MessOwnerEntity">
        SELECT id, first_name, last_name, age, gender, contact_number, mess_id
        FROM mess_owner
    </select>

    <select id="findAllMessOwnersByMessId"
            resultMap="MessOwnerResultMap" parameterType="java.lang.Integer" resultType="mybatis.com.mybatis.ManagementEntity.MessOwnerEntity">
        SELECT id, first_name, last_name, age, gender, contact_number, mess_id
        FROM mess_owner WHERE mess_id = #{messId}
    </select>

    <insert id="add" keyProperty="id" useGeneratedKeys="true" parameterType="mybatis.com.mybatis.ManagementEntity.MessOwnerEntity" keyColumn="id">
        insert into mess_owner(first_name, last_name, age, gender, contact_number, mess_id)
        values (#{firstName},#{lastName},#{age},#{gender},#{contactNumber},#{messId})
    </insert>
</mapper>