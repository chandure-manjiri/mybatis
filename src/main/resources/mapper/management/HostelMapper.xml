<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="mybatis.com.mybatis.ManagementRepository.HostelRepository" >
    <resultMap id="HostelResultMap" type="mybatis.com.mybatis.ManagementEntity.HostelEntity" >
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="hostel_type" property="hostelType"/>
        <result column="location" property="location"/>
    </resultMap>

    <select id="findAllHostels"
            resultMap="HostelResultMap" resultType="mybatis.com.mybatis.ManagementEntity.HostelEntity">
        SELECT id, name, hostel_type, location
        FROM hostel
    </select>

    <insert id="add" keyProperty="id" useGeneratedKeys="true" parameterType="mybatis.com.mybatis.ManagementEntity.HostelEntity" keyColumn="id">
        insert into hostel (name, hostel_type, location)
        values (#{name},#{hostelType},#{location})
    </insert>
</mapper>